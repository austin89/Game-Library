<div class="panel panel-default user-info">
{{#link-to "friends.show" friend class=users.id}}
	<div class="panel-heading">
		<h3 class="panel-title">{{friend.username}}</h3>
	</div>
	<div class="panel-body">
		<p>Username: {{friend.username}}</p>
		<p>Password: {{friend.password}}</p>
		</div>
		{{/link-to}}
		<div class="panel-footer text-right">
			{{#unless checkUserFriends}}
				<button class="btn btn-success btn-xs" {{action 'addFriend' friend}}>Follow</button>
			{{else}}
				<button class="btn btn-danger btn-xs" {{action 'deleteFriend' friend}}>Unfollow</button>
			{{/unless}}
	      	{{yield}}
    	</div>
</div>