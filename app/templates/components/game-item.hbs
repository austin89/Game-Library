
<div class="panel panel-default game-item">
{{#link-to "games.show" game class=games.id}}
	<div class="panel-heading">
	<h3 class="panel-title">{{game.name}}</h3>
	</div>
	<div class="panel-body">
		<span><img src={{game.image}} width=90 height=128></span>
		<br>
		<span>Genre: {{game.genre}}</span><br>
		<span>Company: {{game.company}}</span><br>
		<span>Platform: {{game.platform}}</span><br>
		<span>Release Date: {{game.released}}</span><br>
		<span>{{star-rating rating=game.rating anyPercent=true readOnly=true height=13 width=13 fillColor='gold'}}</span>
	</div>
	{{/link-to}}
	<div class="panel-footer text-right">
	<!--<button class="btn btn-success btn-xs" {{action 'checkUserGamesMethod' game users}} >Check</button>-->
	    {{#unless onShow}}
	    {{#unless checkUserGames}}
	    	<button type='submit' class="btn btn-success btn-xs" {{action 'addGame' game}}>Add to Favorites</button>
        {{else}}
            <button class="btn btn-danger btn-xs" {{action 'removeGame' game}}>Remove from Favorites</button>
        {{/unless}}
        {{/unless}}
     {{yield}}
   	</div>
</div>