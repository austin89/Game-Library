<div class="comment-container">
  <div class="form-group shadow-textarea">
    <label for="exampleFormControlTextarea6">Add a Comment</label>
    {{textarea type="text" value=comment enter=(action 'addComment' model) class="form-control z-depth-1" id="exampleFormControlTextarea6" rows="3" placeholder="Write something here..." autocomplete="off"}}
    <button class="btn btn-primary btn-lg btn-block" {{action 'addComment' model}}>Submit Comment</button>
  </div>
</div>



<div class="row">
  {{#each model.comment as |comment|}}
    <div class="col-md-4">
        {{#comment-item comment=comment}}
        {{/comment-item}}
        <br/>
      </div>
      {{else}}
          <div class="col-md-12 text-center">
          <div class="alert alert-info">
              Be the first to leave a comment!
          </div>
      </div>
  {{/each}}
</div>


