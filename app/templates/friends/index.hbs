<div class="container">
<div class="padding-container">
  <h1>User Search</h1>
  <div class="row">
    <div class="col-md-2">
      {{#link-to (query-params limit='all' letter='') class='btn btn-default btn-lg btn-block'}}Search{{/link-to}}
    </div>
    <div class="col-md-10">
      {{#if limitAll}}
        <div class="form-group">
          {{input value=filter class="form-control input-lg" placeholder="Filter by username"}}
        </div>
      {{else}}
        {{log "hereeeeeeee"}}
          <div class="form-group">
            {{abc-buttons}}
          </div>
      {{/if}}
    </div>
  </div>


  <br/>

  <div class="row">
  	{{#each filteredList as |user|}}
  		<div class="col-md-4">
  	  		{{#user-info friend=user userRecord=userRecord onShow=false}}
  	  		{{/user-info}}
  	  	</div>
  	  	{{else}}
      	{{#if model.isUpdating}}
        		{{spinner-cube}}
      	{{else}}
        		<div class="col-md-12 text-center">
          	<div class="alert alert-info">
            		Sorry, no result.
          	</div>
        </div>
      {{/if}}
  	{{/each}}
  </div>
  {{outlet}}
  </div>
</div>