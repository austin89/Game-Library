<!-- app/templates/index.hbs -->
<div class="container">
<!--Game cover carousel-->
<div id="myCarousel" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
 
    <div class="item active">
      <img src="assets/borderlands2-banner.jpg">
    </div>
 <!--
    <div class="item">
      <img src="assets/Fallout-4-banner.jpg">
    </div>

    <div class="item">
      <img src="assets/mass-effect-banner.jpg" width=755 height=286>
    </div>
    -->
    {{#each filteredList as |game|}}
        <div class="item">
          <img src={{game.image}} class="homepage-image" width="200px" height="600px">
        </div>
    {{/each}}

  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<br>
<!--Add game form-->

<div class="jumbotron text-center">
   <h1>Add a Game</h1>

   <br/><br/>

   <div class="form-horizontal form-group form-group-lg row">
     <div class="col-xs-offset-1 col-xs-10">
       {{input type="text" value=game class="form-control" placeholder="Enter game name" autocomplete="off"}}
     </div>
     <div class="col-xs-offset-1 col-xs-10">
       {{input type="text" value=company class="form-control" placeholder="Enter game publisher" autocomplete="off"}}
     </div>
     <div class="col-xs-offset-1 col-xs-10">
       {{input type="text" value=genre class="form-control" placeholder="Enter game genre" autocomplete="off"}}
     </div>
     <div class="col-xs-offset-1 col-xs-10">
       {{input type="text" value=platform class="form-control" placeholder="Enter game platform" autocomplete="off"}}
     </div>
     <div class="col-xs-offset-1 col-xs-10">
       {{input type="text" value=released class="form-control" placeholder="Enter game release date" autocomplete="off"}}
     </div>
     <div class="col-xs-offset-1 col-xs-10">
       {{input type="text" value=image class="form-control" placeholder="Enter image URL" autocomplete="off"}}
     </div>
     <br>
     <div class="col-xs-offset-4 col-xs-4">
       <button style="margin-top:7px" class="btn btn-primary btn-lg btn-block" {{action 'saveInvitation'}}>Add Game</button>
     </div>
   </div>

   {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
   {{/if}}

   <br/><br/>

</div>
</div>