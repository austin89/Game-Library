


<div class="container-fluid">
<img src="/assets/banner.jpeg" style="display:block; margin-left: auto; margin-right: auto;" width=100%>

  
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        {{#link-to 'index' class="navbar-brand"}}Game Center{{/link-to}}
      </div>

      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="nav navbar-nav">
  			{{#link-to 'index' tagName="li"}}<a href="">Home</a>{{/link-to}}
  			{{#link-to 'games' tagName="li"}}<a href="">Games</a>{{/link-to}}
        {{#link-to 'friends' tagName="li"}}<a href="">Friends</a>{{/link-to}}


		</ul>
    <div class="login-container">
    <form id="loginForm" class="form-inline">
             {{input type="text" value=username class="form-control" placeholder="Username" autocomplete="off"}}
             {{input type="password" value=password class="form-control" placeholder="Password" autocomplete="off"}}
             <button type="submit" class="btn btn-sm" {{action 'login'}}>Login</button>
             <button type="submit" class="btn btn-sm" {{action 'createProfile'}}>Create</button>
    </form>
    <div id="welcome" hidden=true></div>
  </div>

      </div><!-- /.navbar-collapse -->

    </div><!-- /.container-fluid -->

  </nav>

  {{outlet}}
</div>